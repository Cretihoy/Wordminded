<resources>

    <style name="Theme.Wordminded" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/lightBlue</item>
        <item name="colorPrimaryVariant">@color/darkBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/lightRed</item>
        <item name="colorSecondaryVariant">@color/darkRed</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/Theme.Wordminded.TextView</item>
        <item name="cardViewStyle">@style/Theme.Wordminded.CardView</item>
    </style>

    <style name="Theme.Wordminded.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorPrimary">@color/lightBlue</item>
        <item name="colorPrimaryVariant">@color/darkBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/lightRed</item>
        <item name="colorSecondaryVariant">@color/darkRed</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/Theme.Wordminded.TextView</item>
        <item name="cardViewStyle">@style/Theme.Wordminded.CardView</item>
    </style>

    <style name="Theme.Wordminded.TextView" parent="Theme.Wordminded">
        <item name="android:textSize">@dimen/textSmallSize</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical">@dimen/smallPadding</item>
        <item name="android:paddingHorizontal">@dimen/bigPadding</item>
    </style>

    <style name="Theme.Wordminded.Title" parent="Theme.Wordminded.TextView">
        <item name="android:padding">@dimen/smallPadding</item>
        <item name="android:textSize">@dimen/textBigSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Wordminded.CardView" parent="Theme.Wordminded">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardCornerRadius">@dimen/radius</item>
    </style>
    
    <style name="Theme.Wordminded.Button" parent="Theme.Wordminded">
        <item name="android:background"> @drawable/button</item>
    </style>
</resources>