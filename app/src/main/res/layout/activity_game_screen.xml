<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorOnPrimary"
    android:orientation="vertical"
    android:padding="@dimen/bigPadding">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin"
        android:backgroundTint="?colorSecondary"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/radius">

        <TextView
            android:id="@+id/letter_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/bigPadding"
            android:rotation="180"
            android:textColor="?colorOnSecondary"
            android:textSize="@dimen/textBigSize"
            tools:text="@string/letter_01" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin"
        android:layout_weight="1"
        android:backgroundTint="?colorPrimary"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/radius">

        <TextView
            android:id="@+id/task_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/bigPadding"
            android:rotation="180"
            android:textColor="?colorOnSecondary"
            android:textSize="@dimen/textSmallSize"
            tools:text="@tools:sample/lorem/random" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin"
        android:layout_weight="1"
        android:backgroundTint="?colorPrimary"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/radius">

        <TextView
            android:id="@+id/task_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/smallPadding"
            android:textColor="?colorOnSecondary"
            android:textSize="@dimen/textSmallSize"
            tools:text="@tools:sample/lorem/random" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?colorSecondary"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/radius">

        <TextView
            android:id="@+id/letter_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/bigPadding"
            android:textColor="?colorOnSecondary"
            android:textSize="@dimen/textBigSize"
            tools:text="@string/letter_01" />

    </androidx.cardview.widget.CardView>
</LinearLayout>